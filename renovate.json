{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", "mergeConfidence:all-badges"],
  "branchPrefix": "renovate/",
  "argocd": {
    "managerFilePatterns": [
      "/(^|/)charts/cluster-template/templates/.*-apps\\.yaml$/",
      "/(^|/)charts/cluster-template/templates/databases/[a-z\\-]+\\.yaml$/",
      "/(^|/)charts/cluster-template/templates/vector/[a-z\\-]+\\.yaml$/",
      "/(^|/)charts/cluster-template/templates/custom-apps/[a-z\\-]+\\.yaml$/"
    ]
  },
  "reviewersFromCodeOwners": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "semanticCommitType": "fix",
    "schedule": "before 7am every weekday",
    "dependencyDashboardApproval": false,
    "commitMessageSuffix": ""
  },
  "osvVulnerabilityAlerts": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "timezone": "Europe/Zurich"
}

